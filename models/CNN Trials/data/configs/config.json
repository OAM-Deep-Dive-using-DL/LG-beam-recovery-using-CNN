{
    "dataset_name": "fso_oam_turbulence_v1",
    "description": "FSO-OAM dataset with atmospheric turbulence for CNN training",
    "system_parameters": {
        "wavelength": 1.55e-6,
        "w0": 0.025,
        "distance": 1000,
        "receiver_diameter": 0.5,
        "p_tx_total": 1.0,
        "spatial_modes": [
            [
                0,
                -1
            ],
            [
                0,
                1
            ],
            [
                0,
                -3
            ],
            [
                0,
                3
            ],
            [
                0,
                -4
            ],
            [
                0,
                4
            ],
            [
                1,
                -1
            ],
            [
                1,
                1
            ]
        ],
        "pilot_parameters": {
            "enabled": true,
            "mode": [
                0,
                0
            ],
            "power_ratio": 0.2
        }
    },
    "turbulence_parameters": {
        "cn2_min": 1e-18,
        "cn2_max": 1e-13,
        "num_cn2_points": 15,
        "cn2_distribution": "logarithmic",
        "L0": 10.0,
        "l0_inner": 0.005,
        "num_screens": 15,
        "cn2_model": "uniform"
    },
    "dataset_size": {
        "train": 20000,
        "val": 3000,
        "test": 2000,
        "samples_per_cn2": "auto"
    },
    "cn2_sampling_weights": {
        "very_weak": {
            "range": [
                1e-18,
                1e-17
            ],
            "weight": 0.10
        },
        "weak": {
            "range": [
                1e-17,
                1e-15
            ],
            "weight": 0.30
        },
        "moderate": {
            "range": [
                1e-15,
                1e-14
            ],
            "weight": 0.40
        },
        "strong": {
            "range": [
                1e-14,
                1e-13
            ],
            "weight": 0.20
        }
    },
    "grid_parameters": {
        "n_grid_sim": 512,
        "n_grid_output": 128,
        "oversampling": 2,
        "downsampling_method": "bilinear"
    },
    "data_format": {
        "input_type": "intensity",
        "input_channels": 1,
        "input_shape": [
            64,
            64
        ],
        "output_type": "symbols",
        "output_shape": [
            8,
            2
        ],
        "normalize_input": false,
        "normalization_method": "per_sample"
    },
    "augmentation": {
        "enabled": true,
        "rotation_range": 10,
        "translation_range": 5,
        "multiple_realizations": 3,
        "add_noise": true
    },
    "output": {
        "format": "hdf5",
        "compression": "gzip",
        "compression_level": 4,
        "save_metadata": true,
        "save_turbulence_params": true
    },
    "random_seed": 42,
    "verbose": true
}